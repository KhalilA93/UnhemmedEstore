{
  "name": "unhemmed-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack E-commerce Store - Unhemmed",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run build && npx serve -s frontend/build -l 3001",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend",
    "build:backend": "cd backend && npm install --production",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "render:frontend": "cd frontend && npm install && npm run build && npx serve -s build",
    "render:backend": "cd backend && npm install && npm start"
  },
  "keywords": [
    "ecommerce",
    "fullstack",
    "express",
    "mongodb",
    "tailwindcss"
  ],
  "author": "KhalilA93",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
