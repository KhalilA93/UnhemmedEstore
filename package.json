{
  "name": "unhemmed-store",
  "version": "1.0.0",
  "description": "Unhemmed - A modern clothing e-commerce website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently -n \"CSS,SERVER\" -c \"cyan,green\" \"npm run css:watch\" \"npm run server:dev\"",
    "dev:simple": "concurrently \"npm run css:build-once\" \"npm run server:start\"",
    "server:dev": "nodemon server.js",
    "server:start": "node server.js",
    "css:watch": "tailwindcss -i ./public/css/style.css -o ./public/css/output.css --watch",
    "css:build": "tailwindcss -i ./public/css/style.css -o ./public/css/output.css --minify",
    "css:build-once": "tailwindcss -i ./public/css/style.css -o ./public/css/output.css",
    "build": "npm run css:build",
    "init:db": "node scripts/initDatabase.js",
    "seed": "node scripts/seedData.js",
    "test:auth": "echo \"Testing authentication endpoints...\" && curl -s http://localhost:3002/api/health || echo \"Server not running\"",
    "kill:port": "npx kill-port 3002",
    "restart": "npm run kill:port && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "node",
    "express",
    "brochure"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.17"
  }
}
