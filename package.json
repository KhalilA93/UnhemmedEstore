{
  "name": "ecommerce-site",
  "version": "1.0.0",
  "description": "A modern brochure-style e-commerce website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run build:css && nodemon server.js",
    "build:css": "tailwindcss -i ./public/css/style.css -o ./public/css/output.css --watch",
    "build:css-prod": "tailwindcss -i ./public/css/style.css -o ./public/css/output.css --minify",
    "seed": "node scripts/seedData.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "node",
    "express",
    "brochure"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.17"
  }
}
