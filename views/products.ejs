    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">        <!-- Page Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 font-display mb-4">
                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                    Search Results
                <% } else if (typeof currentCategory !== 'undefined' && currentCategory !== 'All') { %>
                    <%= currentCategory === 'Men' ? "Men's Clothing" : currentCategory === 'Women' ? "Women's Clothing" : currentCategory %>
                <% } else { %>
                    Our Clothing Collection
                <% } %>
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                    Found <%= products.length %> result<%= products.length !== 1 ? 's' : '' %> for "<%= searchTerm %>"
                <% } else if (typeof currentCategory !== 'undefined' && currentCategory === 'Men') { %>
                    Discover premium men's clothing from shirts and pants to jackets and accessories
                <% } else if (typeof currentCategory !== 'undefined' && currentCategory === 'Women') { %>
                    Explore elegant women's fashion from dresses and tops to shoes and handbags
                <% } else { %>
                    Discover our complete collection of premium clothing for men and women
                <% } %>
            </p>
            
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
            <div class="mt-4">
                <a href="/products" class="inline-flex items-center px-4 py-2 text-sm text-primary-600 hover:text-primary-700 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    View All Products
                </a>
            </div>
            <% } %>
        </div>
        
        <!-- Category Filters -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <div class="flex-1">
                <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" onchange="filterByCategory(this.value)">
                    <option value="">All Categories</option>
                    <option value="Men" <%= (typeof currentCategory !== 'undefined' && currentCategory === 'Men') ? 'selected' : '' %>>Men's Clothing</option>
                    <option value="Women" <%= (typeof currentCategory !== 'undefined' && currentCategory === 'Women') ? 'selected' : '' %>>Women's Clothing</option>
                </select>
            </div>
            <div class="flex gap-2">
                <a href="/men" class="px-4 py-2 <%= (typeof currentCategory !== 'undefined' && currentCategory === 'Men') ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300' %> rounded-lg font-medium transition-colors hover:bg-primary-600 hover:text-white">
                    Men's
                </a>
                <a href="/women" class="px-4 py-2 <%= (typeof currentCategory !== 'undefined' && currentCategory === 'Women') ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300' %> rounded-lg font-medium transition-colors hover:bg-primary-600 hover:text-white">
                    Women's
                </a>
                <a href="/products" class="px-4 py-2 <%= (typeof currentCategory === 'undefined' || currentCategory === 'All') ? 'bg-primary-600 text-white' : 'bg-white text-gray-700 border border-gray-300' %> rounded-lg font-medium transition-colors hover:bg-primary-600 hover:text-white">
                    All
                </a>
            </div>
        </div>
        
        <!-- Products Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>                <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                    <a href="/product/<%= product._id || product.id %>" class="block">
                        <div class="aspect-square bg-gray-100">
                            <img src="<%= (product.images && product.images[0] && product.images[0].url) || product.image || '/images/placeholder.svg' %>" 
                                 alt="<%= (product.images && product.images[0] && product.images[0].alt) || product.name %>" 
                                 class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                                 onerror="this.src='/images/placeholder.svg'">
                        </div>
                    </a>
                    <div class="p-6">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="text-xs px-2 py-1 bg-primary-100 text-primary-600 rounded-full font-medium"><%= product.category %></span>
                            <span class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full"><%= product.subcategory %></span>
                        </div>
                        <a href="/product/<%= product._id || product.id %>">
                            <h3 class="text-xl font-semibold text-gray-900 mb-2 line-clamp-2 hover:text-primary-600 transition-colors"><%= product.name %></h3>
                        </a>
                        <% if (product.brand) { %>
                        <p class="text-sm text-gray-500 mb-2"><%= product.brand %></p>
                        <% } %>
                        <p class="text-gray-600 mb-4 line-clamp-2"><%= product.shortDescription || product.description %></p>
                        
                        <!-- Sizes Preview -->
                        <% if (product.sizes && product.sizes.length > 0) { %>
                        <div class="mb-3">
                            <p class="text-xs text-gray-500 mb-1">Available sizes:</p>
                            <div class="flex gap-1">
                                <% product.sizes.slice(0, 4).forEach(size => { %>
                                    <span class="text-xs px-2 py-1 bg-gray-50 text-gray-600 border rounded"><%= size.size %></span>
                                <% }); %>
                                <% if (product.sizes.length > 4) { %>
                                    <span class="text-xs px-2 py-1 text-gray-400">+<%= product.sizes.length - 4 %></span>
                                <% } %>
                            </div>
                        </div>
                        <% } %>
                        
                        <!-- Colors Preview -->
                        <% if (product.colors && product.colors.length > 0) { %>
                        <div class="mb-4">
                            <p class="text-xs text-gray-500 mb-1">Available colors:</p>
                            <div class="flex gap-2">
                                <% product.colors.slice(0, 5).forEach(color => { %>
                                    <div class="w-4 h-4 rounded-full border border-gray-300" 
                                         style="background-color: <%= color.hex %>" 
                                         title="<%= color.name %>"></div>
                                <% }); %>
                                <% if (product.colors.length > 5) { %>
                                    <span class="text-xs text-gray-400 self-center">+<%= product.colors.length - 5 %></span>
                                <% } %>
                            </div>
                        </div>
                        <% } %>
                        
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-2">
                                <span class="text-2xl font-bold text-primary-600">$<%= product.price %></span>
                                <% if (product.comparePrice && product.comparePrice > product.price) { %>
                                <span class="text-lg text-gray-500 line-through">$<%= product.comparePrice %></span>
                                <% } %>
                            </div>
                            <div class="flex space-x-2">
                                <a href="/product/<%= product._id || product.id %>" 
                                   class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-3 py-2 rounded-lg font-medium transition-colors duration-200 flex items-center space-x-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    <span>View</span>
                                </a>
                                <button class="bg-primary-600 hover:bg-primary-700 text-white px-3 py-2 rounded-lg font-medium transition-colors duration-200 flex items-center space-x-1" 
                                        onclick="addToCart('<%= product._id || product.id %>', '<%= product.name.replace(/'/g, "\\'") %>', <%= product.price %>, '<%= (product.images && product.images[0] && product.images[0].url) || product.image || "/images/placeholder.svg" %>')">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                    </svg>
                                    <span>Add</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-full text-center py-16">
                    <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No products found</h3>
                    <p class="text-gray-600">We're working on adding more products to this category.</p>
                </div>
            <% } %>
        </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div class="md:col-span-2">
